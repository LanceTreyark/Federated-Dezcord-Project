            background-color: #555;
        }

        body {
            background-image: url("../resources/backgroundRainbowEffect.png");
            background-repeat: no-repeat;
        }

        .code-container {
            position: relative;
        }

        .copy-button {
            position: absolute;
            top: 10px;
            right: 10px;
            padding: 5px 10px;
            background-color: #1a202c;
            color: #ffffff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .copy-button:hover {
            background-color: #2d3748;
        }

        /*Login Modal*/
        .login-modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
        }

        .login-form-container,
        .register-form-container {
            background-color: #005eff00;
            height: auto;
            border-radius: 0.5rem;

        }

        .close-button {
            position: absolute;
            top: 1rem;
            right: 1rem;
            cursor: pointer;
            font-size: 3rem;
            /* Increase the font size */
            padding: 0.5rem;
            /* Add some padding */
        }

        .code-container {
            margin-top: 5rem;
            /*
            max-width: 800px;
            min-width: 300px;
            */
            max-width: 700px;
            margin-left: auto;
            margin-right: auto;
            border-style: solid;
            border-width: 1px;
            border-color: white;
            /*padding: 2rem;*/
            border-radius: 0.35rem;
            background-color: black;
        }

        .codeParent {
            margin-bottom: 5rem;
            max-width: 1220px;
            margin-left: auto;
            margin-right: auto
        }

        /* Media query for screens with a max width of 1000px */
        @media (max-width: 1000px) {
            .code-container {
                max-width: 600px !important;
            }

            .codeParent {
                max-width: 85% !important;
            }
        }
